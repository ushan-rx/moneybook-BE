{
  "family": "moneybook-task",
  "networkMode": "awsvpc",
  "cpu": "512",
  "memory": "1024",
  "requiresCompatibilities": ["FARGATE"],
  "executionRoleArn": "arn:aws:iam::123456789012:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::123456789012:role/moneybookAppRole",
  "containerDefinitions": [
    {
      "name": "${{ env.CONTAINER_NAME }}",
      "image": "123456789012.dkr.ecr.us-east-1.amazonaws.com/moneybook:latest",
      "portMappings": [ { "containerPort": 8080, "protocol": "tcp" } ],
      "essential": true,
      "environment": [
        {"name": "SPRING_PROFILES_ACTIVE", "value": "prod"}
      ],
      "secrets": [
        {"name": "DB_URL", "valueFrom": "arn:aws:secretsmanager:us-east-1:123456789012:secret:moneybook/DB_URL"},
        {"name": "DB_USERNAME", "valueFrom": "arn:aws:secretsmanager:us-east-1:123456789012:secret:moneybook/DB_USERNAME"},
        {"name": "DB_PASSWORD", "valueFrom": "arn:aws:secretsmanager:us-east-1:123456789012:secret:moneybook/DB_PASSWORD"},
        {"name": "JWT_ACCESS_SECRET_KEY", "valueFrom": "arn:aws:secretsmanager:us-east-1:123456789012:secret:moneybook/JWT_ACCESS_SECRET_KEY"},
        {"name": "JWT_REFRESH_SECRET_KEY", "valueFrom": "arn:aws:secretsmanager:us-east-1:123456789012:secret:moneybook/JWT_REFRESH_SECRET_KEY"},
        {"name": "GOOGLE_CLIENT_ID", "valueFrom": "arn:aws:secretsmanager:us-east-1:123456789012:secret:moneybook/GOOGLE_CLIENT_ID"},
        {"name": "GOOGLE_CLIENT_SECRET", "valueFrom": "arn:aws:secretsmanager:us-east-1:123456789012:secret:moneybook/GOOGLE_CLIENT_SECRET"},
        {"name": "GEMINI_API_KEY", "valueFrom": "arn:aws:secretsmanager:us-east-1:123456789012:secret:moneybook/GEMINI_API_KEY"},
        {"name": "REDIS_HOST", "valueFrom": "arn:aws:ssm:us-east-1:123456789012:parameter/moneybook/REDIS_HOST"},
        {"name": "REDIS_PORT", "valueFrom": "arn:aws:ssm:us-east-1:123456789012:parameter/moneybook/REDIS_PORT"},
        {"name": "REDIS_PASSWORD", "valueFrom": "arn:aws:secretsmanager:us-east-1:123456789012:secret:moneybook/REDIS_PASSWORD"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/moneybook",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "moneybook"
        }
      },
      "healthCheck": {
        "retries": 3,
        "command": ["CMD-SHELL", "curl -f http://localhost:8080/actuator/health || exit 1"],
        "timeout": 5,
        "interval": 30,
        "startPeriod": 30
      }
    }
  ]
}

